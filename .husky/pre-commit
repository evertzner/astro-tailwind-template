# Color definitions
RESET="\033[0m"
RED="\033[31m"
GREEN="\033[32m"
YELLOW="\033[33m"
BLUE="\033[34m"
MAGENTA="\033[35m"
CYAN="\033[36m"

# Custom message before starting the process
echo -e "${MAGENTA}🚀 Starting the pre-commit process... Good luck!${RESET}"

# Run `npm check`
echo -e "${YELLOW}🔍 Running 'npm check'...${RESET}"
if ! npm run check; then
  echo -e "${RED}❌ 'npm check' failed! Please fix the issues before committing. 😢${RESET}"
  exit 1
fi
echo -e "${GREEN}✅ 'npm check' completed successfully!${RESET}"

# Run `npm lint`
echo -e "🔍 Running 'npm lint'..."
if ! npm run lint; then
  echo -e "${RED}❌ 'npm lint' failed! Please fix the issues before committing. 😢${RESET}"
  exit 1
fi
echo -e "${GREEN}✅ 'npm lint' completed successfully!${RESET}"

# Custom message after the process finishes
echo -e "${CYAN}🎉 All checks passed! Ready to commit! 🚀"
